# GitHub MCP Server Configuration

# Required for SSE server - 32-byte encryption key for AES-256
# Generate a new key using: ./github-mcp-server encrypt generate-key
GITHUB_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Optional: GitHub Enterprise hostname (leave empty for github.com)
GITHUB_HOST=

# Optional: Port for SSE server (default: 8080)
GITHUB_PORT=8080

# Optional: Enable command logging
GITHUB_ENABLE_COMMAND_LOGGING=false

# Optional: Log file path
GITHUB_LOG_FILE=

# Optional: Enable read-only mode
GITHUB_READ_ONLY=false

# Optional: Enable dynamic toolsets
GITHUB_DYNAMIC_TOOLSETS=false

# Optional: Comma-separated list of toolsets to enable
GITHUB_TOOLSETS=all
